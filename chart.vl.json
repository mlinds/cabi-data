{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "An interactive visualization of connections among major U.S. airports in 2008. Based on a U.S. airports example by Mike Bostock.",
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "#fff",
        "strokeWidth": 1
      },
      "data": {
        "url": "counties-10m.json",
        "format": {"type": "topojson", "feature": "counties"}
      },
      "transform": [
        {
          "filter": {
            "field": "name",
            "oneOf": [
              "District of Columbia",
              "Fairfax",
              "Montgomery"
            ]
          }
        }
      ]
    },
    {
      "mark": {"type": "rule", "color": "#000", "opacity": 0.35},
      "data": {"url": "data/stationLookup.csv"},
      "transform": [
        {"filter": {"selection": "single"}},
        {
          "lookup": "short_name",
          "from": {
            "data": {"url": "data/connections_csv.csv"},
            "key": "startid",
            "fields": ["lat", "lon"]
          }
        },
        {
          "lookup": "endid",
          "from": {
            "data": {"url": "data/stationLookup.csv"},
            "key": "short_name",
            "fields": ["lat", "lon"]
          },
          "as": ["lat2", "lon2"]
        }
      ],
      "encoding": {
        "latitude": {"field": "lat"},
        "longitude": {"field": "lon"},
        "latitude2": {"field": "lat2"},
        "longitude2": {"field": "lon2"}
      }
    },
    {
      "mark": {"type": "circle"},
      "data": {"url": "data/connections_csv.csv"},
      "transform": [
        {"aggregate": [{"op": "count", "as": "routes"}], "groupby": ["startid"]},
        {
          "lookup": "short_name",
          "from": {
            "data": {"url": "data/stationLookup.csv"},
            "key": "startid",
            "fields": ["name", "lat", "lon"]
          }
        },
        {"filter": "datum.state !== 'PR' && datum.state !== 'VI'"}
      ],
      "selection": {
        "single": {
          "type": "single",
          "on": "mouseover",
          "nearest": true,
          "fields": ["short_name"],
          "empty": "none"
        }
      },
      "encoding": {
        "latitude": {"field": "lat"},
        "longitude": {"field": "lon"},
        "size": {
          "field": "routes",
          "type": "quantitative",
          "scale": {"rangeMax": 1000},
          "legend": null
        },
        "order": {
          "field": "routes",
          "sort": "descending"
        }
      }
    }
  ],
  "projection": {"type": "albersUsa"},
  "width": 900,
  "height": 500,
  "config": {"view": {"stroke": null}}
}
